<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">
    <layer-list>
      <item android:bottom="0dp" android:left="0dp">
        <shape>
          <gradient android:angle="270" android:endColor="@color/trustdriveAccentColor" android:startColor="@color/trustdriveAccentColor"/>
          <stroke android:width="1dp" android:color="@color/trustdriveAccentColor"/>
          <corners android:radius="5dp"/>
          <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
        </shape>
      </item>

    </layer-list>
  </item>



  <item android:state_pressed="true">
    <layer-list>
      <item android:bottom="0dp" android:left="0dp">
        <shape>
          <gradient android:angle="270" android:endColor="@color/trustdriveAccentClick" android:startColor="@color/trustdriveAccentClick"/>
          <stroke android:width="1dp" android:color="@color/trustdriveAccentClick"/>
          <corners android:radius="5dp"/>
          <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
        </shape>
      </item>
    </layer-list>

  </item>
</selector>